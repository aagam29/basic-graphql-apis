{
  "compilerOptions": {
    "target": "es2020",
    "rootDirs": [
      "src"
    ],
    "outDir": "dist",
    "lib": [
      "ES2017"
    ],
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ]
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "./*.ts",
    "./src/*.ts",
    "./src/*/*.ts",
    "./src/*/*/*.ts"
  ]
}
